<!--pages/my/index.wxml-->
<view>
  <view class='user'>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
  </view>
  <view class='my_info'>
    <view class="my_message">
      <image src='../../images/my_message.png' />
      <text>我的消息</text>
    </view>
    <view class="my_wallet" bindtap='toMyWallet'>
      <image src='../../images/my_wallet.png' />
      <text>我的钱包</text>
    </view>
    <view class="customerInfo">
      <image src='../../images/customer.png' />
      <text>店铺信息</text>
    </view>
    <view class="connatCustomer">
      <image src='../../images/connat.png' />
      <text>联系客服</text>
    </view>
  </view>

</view>