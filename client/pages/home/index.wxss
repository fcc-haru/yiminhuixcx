/* pages/home/index.wxss */

.container {
  height: 100%;
  width: 100%;
  display: inline-block;
  margin-bottom: 100rpx;
}

swiper {
  width: 100%;
  height: 450rpx;
}

swiper image {
  display: block;
  width: 100%;
  height: 100%;
}

.ptList {
  margin-top: 4rpx;
}

.productItem {
  height: 100px;
  padding: 0 40rpx 0 20rpx;
  border: 2rpx solid #ccc;
  margin-top: -2rpx;
  line-height: 1;
  vertical-align: middle;
}

.left image {
  width: 160rpx;
  height: 160rpx;
}

.productItem {
  display: flex;
  align-items: center;
}

text {
  display: block;
}

.left {
  float: left;
}

.middle {
  flex: 1;
  text-align: left;
  margin: 0 10px;
}

.right {
  display: flex;
  float: left;
  flex-direction: column;
  align-items: center;
}

.right input {
  text-align: center;
  border: 0;
  font-size: 24px;
}

.right image {
  width: 60rpx;
  height: 60rpx;
}

.price {
  display: inline-block;
  color: red !important;
}

.light {
  font-size: 12px;
  color: #999;
}

.decr {
  padding: 12rpx 0;
}

.changeNum {
  font-family: Courier New, Courier, monospace;
  font-size: 18px;
  text-align: center;
  background-color: #ccc;
  border-radius: 50%;
}

input {
  width: 60rpx;
  height: 40rpx;
  border: 2px solid #ccc;
  margin: 10rpx;
  padding-right: 4rpx;
  text-align: right;
}

.addToCar {
  z-index: 10;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #333;
  color: #fff;
  padding: 0 40rpx 0 50rpx;
  box-sizing: border-box;
}

.addToCar text:first-child {
  float: left;
}

.addToCar text:last-child {
  float: right;
}
