/* pages/home/index.wxss */

.container {
  height: 100%;
  width: 100%;
  display: inline-block;
  margin-bottom: 100rpx;
}

swiper {
  width: 100%;
  height: 450rpx;
}

swiper image {
  display: block;
  width: 100%;
  height: 100%;
}

.ptList {
  margin-top: 2px;
}

.productItem {
  height: 100px;
  padding: 0 20px 0 10px;
  border: 1px solid #ccc;
  margin-top: -1px;
  line-height: 1;
  vertical-align: middle;
}

.left image {
  width: 80px;
  height: 80px;
}

.productItem {
  display: flex;
  align-items: center;
}

text {
  display: block;
}

.left {
  float: left;
}

.middle {
  flex: 1;
  text-align: left;
  margin: 0 10px;
}

.right {
  display: flex;
  float: left;
  flex-direction: column;
  align-items: center;
}

.right input {
  text-align: center;
  border: 0;
  font-size: 24px;
}

.right image {
  width: 30px;
  height: 30px;
}

.price {
  display: inline-block;
  color: red !important;
}

.light {
  font-size: 12px;
  color: #999;
}

.decr {
  padding: 6px 0;
}

.changeNum {
  font-family: Courier New, Courier, monospace;
  font-size: 18px;
  text-align: center;
  background-color: #ccc;
  border-radius: 50%;
}

input {
  width: 30px;
  height: 20px;
  border: 1px solid #ccc;
  margin: 5px;
  padding-right: 2px;
  text-align: right;
}

.addToCar {
  z-index: 10;
  position: fixed;
  bottom: 0;
  left: o;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #333;
  color: #fff;
  padding: 0 40rpx 0 50rpx;
  box-sizing: border-box;
}

.addToCar text:first-child {
  float: left;
}

.addToCar text:last-child {
  float: right;
}
